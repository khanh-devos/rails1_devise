
<div class="headerTotal" >
    <div class="header P1">
    <%= link_to "Home", root_path, class:"root header_link" %>
    <%= link_to "About Me", home_about_path, class:"about header_link" %>
    <%= link_to "All Friends", friends_path, class:"friend header_link" %>
    <%= link_to "User Friends", userfriends_path, class:"userFriend header_link" %>
    <%= link_to "NewFriend", new_friend_path, class:"newFriend header_link" %>
    </div>

    <div class="header P3">
        <% if user_signed_in? %>
            Welcome : <%= current_user.email.scan(/[\w]*\@/)[0] %> !
        <% end %>
    </div>
    
    <div class="header P2">
    <%# For devise_routes %> 
    <%= link_to "Sign Up", new_user_registration_path, class:"signUp header_link" %>
    <%= link_to "Sign In", new_user_session_path, class:"signIn header_link" %>
    <%= link_to "Sign Out", destroy_user_session_path, 
        data: { "turbo-method": :delete }, class:"signOut header_link", id: "userSignOutID" %>
    <%= link_to "Edit Profile", edit_user_registration_path, class:"editProfile header_link" %>
    </div>
</div>




<div class="noticeAlert">
    <% if notice %>
        <p class="notice" style="color: orangered"> <%= notice %> </p>
    <% end %>

    <% if alert %>
        <p class="alert" style="color: red"> <%= alert %> </p>
    <% end %>

    <%# Just open and login by 3 users, refresh at route "about" each use to see %>
    <%# <div data-chat-room='Room 1' id="ChatRoom"></div> %>
</div>



<script>
    links = document.getElementsByClassName("header_link");
    
    Object.values(links).map(e => {
        e.onclick = ()=>{
            e.style.color = "red";
        }
    })

    
</script>
