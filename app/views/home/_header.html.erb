
<div class="headerTotal" >
    <div class="header P1">
    <%= link_to "Home", root_path, class:"root" %>
    <%= link_to "About", home_about_path, class:"about" %>
    <%= link_to "All Friends", friends_path, class:"friend" %>
    <%= link_to "User Friends", userfriends_path, class:"userFriend" %>
    <%= link_to "NewFriend", new_friend_path, class:"newFriend" %>
    </div>

    <div class="header P2">
    <%# For devise_routes %> 
    <%= link_to "Sign Up", new_user_registration_path, class:"signUp" %>
    <%= link_to "Sign In", new_user_session_path, class:"signIn" %>
    <%= link_to "Sign Out", destroy_user_session_path, 
