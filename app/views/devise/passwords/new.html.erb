<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), id: "resetPassFormID", 
    html: { method: :post }) do |f| %>
  
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , id: "emailSubmitID" %>
    
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", id: "resetPassButtonID" %>
    <i id="showNoticeID" style="display: none">
    Please wait for a little, then check your email to continue changing your password</i>
  </div>
<% end %>

<%= render "devise/shared/links" %>


<script>

  const p1 = document.getElementById("showNoticeID");
  const b1 = document.getElementById("resetPassButtonID");

  b1.onclick = () => {
      
    const e1 = document.getElementById("emailSubmitID");

    if ( e1.value.length >= 3){
      p1.style.display = "block";

      setTimeout(() => {
        p1.style.display = "none";
      }, 20000);
    } 
  }
</script>